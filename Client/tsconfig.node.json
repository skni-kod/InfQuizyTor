{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,

    /* Poprawki */
    "target": "ES2022", // Zmieniono z ES2023
    "lib": ["ES2022", "DOM"], // Zmieniono z ES2023
    "incremental": true, // Dodano, aby naprawić błąd 'tsBuildInfoFile'

    /* Linting */
    "strict": true // Warto też dodać tutaj
  },
  "include": ["vite.config.ts"]
}